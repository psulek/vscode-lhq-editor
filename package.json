{
  "name": "lhq-editor-extension",
  "displayName": "LHQ Editor Extension",
  "description": "An extension for LHQ files",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "lhq",
        "aliases": [
          "LHQ",
          "lhq"
        ],
        "extensions": [
          ".lhq"
        ]
      }
    ],
    "customEditors": [
      {
        "viewType": "lhq.customEditor",
        "displayName": "LHQ File Editor",
        "selector": [
          {
            "filenamePattern": "*.lhq"
          }
        ],
        "priority": "default"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "lhqTreeView",
          "name": "LHQ Structure",
          "when": "lhqEditorIsActive"
        }
      ]
    },
    "commands": [
      {
        "command": "lhqTreeView.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "lhqTreeView.addItem",
        "title": "Add Item",
        "icon": "$(new-file)"
      },
      {
        "command": "lhqTreeView.addCategory",
        "title": "Add Category"
      },
      {
        "command": "lhqTreeView.addResource",
        "title": "Add Resource"
      },
      {
        "command": "lhqTreeView.renameItem",
        "title": "Rename Item",
        "icon": "$(edit)"
      },
      {
        "command": "lhqTreeView.deleteItem",
        "title": "Delete Item",
        "icon": "$(trash)"
      },
      {
        "command": "lhqTreeView.findInTreeView",
        "title": "Find",
        "icon": "$(search)"
      },{
        "command": "lhqTreeView.customFind",
        "title": "Custom Find",
        "icon": "$(search)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "lhqTreeView.refresh",
          "when": "view == lhqTreeView",
          "group": "navigation"
        },
        {
          "command": "lhqTreeView.findInTreeView",
          "group": "navigation"
        },
        {
          "command": "lhqTreeView.addItem",
          "when": "view == lhqTreeView && !lhqTreeHasMultiSelection",
          "group": "navigation"
        },
        {
          "command": "lhqTreeView.renameItem",
          "when": "view == lhqTreeView && lhqTreeHasSelectedItem"
        }
      ],
      "view/item/context": [
        {
          "command": "lhqTreeView.addCategory",
          "when": "view == lhqTreeView && (viewItem == category || viewItem == model) && !lhqTreeHasMultiSelection"
        },
        {
          "command": "lhqTreeView.addResource",
          "when": "view == lhqTreeView && (viewItem == category || viewItem == model) && !lhqTreeHasMultiSelection"
        },
        {
          "command": "lhqTreeView.renameItem",
          "when": "view == lhqTreeView && lhqTreeHasSelectedItem",
          "group": "inline@1"
        },
        {
          "command": "lhqTreeView.deleteItem",
          "when": "view == lhqTreeView && (viewItem == category || viewItem == resource) && !lhqTreeHasSelectedDiffParents"
        }
      ]
    },
    "keybindings": [
      {
        "command": "lhqTreeView.findInTreeView",
        "key": "ctrl+f",
        "when": "lhqEditorIsActive"
      },
      {
        "command": "lhqTreeView.advancedFind",
        "key": "ctrl+alt+f",
        "when": "lhqEditorIsActive"
      }, 
      {
        "command": "lhqTreeView.addCategory",
        "key": "ctrl+insert",
        "when": "lhqEditorIsActive"
      },
      {
        "command": "lhqTreeView.addResource",
        "key": "insert",
        "when": "lhqEditorIsActive"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.5",
    "eslint": "^9.28.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@lhq/lhq-generators": "1.0.0-rc.41",
    "fs-extra": "11.3.0"
  }
}
