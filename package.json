{
  "name": "lhq-editor-extension",
  "displayName": "LHQ Editor Extension",
  "description": "An extension for LHQ files",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "lhq",
        "aliases": [
          "LHQ",
          "lhq"
        ],
        "extensions": [
          ".lhq"
        ]
      }
    ],
    "customEditors": [
      {
        "viewType": "lhq.customEditor",
        "displayName": "LHQ File Editor",
        "selector": [
          {
            "filenamePattern": "*.lhq"
          }
        ],
        "priority": "default"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "lhqTreeView",
          "name": "LHQ Structure",
          "when": "lhqEditorIsActive"
        }
      ]
    },
    "commands": [
      {
        "command": "lhqTreeView.projectProperties",
        "title": "Properties",
        "icon": "$(settings-gear)"
      },
      {
        "command": "lhqTreeView.addElement",
        "title": "Add element",
        "icon": "$(new-file)"
      },
      {
        "command": "lhqTreeView.addLanguage",
        "title": "Add language",
        "icon": "$(new-file)"
      },
      {
        "command": "lhqTreeView.addCategory",
        "title": "Add category"
      },
      {
        "command": "lhqTreeView.addResource",
        "title": "Add resource"
      },
      {
        "command": "lhqTreeView.renameElement",
        "title": "Rename element",
        "icon": "$(edit)"
      },
      {
        "command": "lhqTreeView.deleteElement",
        "title": "Delete element(s)",
        "icon": "$(trash)"
      },
      {
        "command": "lhqTreeView.deleteLanguage",
        "title": "Delete language(s)",
        "icon": "$(trash)"
      },
      {
        "command": "lhqTreeView.findInTreeView",
        "title": "Find",
        "icon": "$(search)"
      },
      {
        "command": "lhqTreeView.markLanguageAsPrimary",
        "title": "Mark language as primary",
        "icon": "$(check)"
      },
      {
        "command": "lhqTreeView.showLanguages",
        "title": "Toggle languages (show)",
        "icon": "$(layers)"
      },
      {
        "command": "lhqTreeView.hideLanguages",
        "title": "Toggle languages (hide)",
        "icon": "$(layers-active)"
      },
      {
        "command": "lhqTreeView.createNewLhqFile",
        "title": "Create strings localization file (LHQ Editor)",
        "icon": "$(new-file)"
      },
      {
        "command": "lhqTreeView.runGenerator",
        "title": "Run code generator",
        "icon": "$(run-all)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "lhqTreeView.projectProperties",
          "when": "view == lhqTreeView",
          "group": "navigation"
        },
        {
          "command": "lhqTreeView.findInTreeView",
          "group": "navigation"
        },
        {
          "command": "lhqTreeView.addElement",
          "when": "view == lhqTreeView && !lhqTreeHasMultiSelection && !lhqTreeHasLanguageSelection",
          "group": "navigation"
        },
        {
          "command": "lhqTreeView.addLanguage",
          "when": "view == lhqTreeView && lhqTreeHasLanguageSelection",
          "group": "navigation"
        }, 
        {
            "command": "lhqTreeView.runGenerator",
            "when": "view == lhqTreeView",
            "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "lhqTreeView.showLanguages",
          "when": "view == lhqTreeView && (viewItem == languages) && !lhqTreeHasLanguagesVisible"
        },
        {
          "command": "lhqTreeView.hideLanguages",
          "when": "view == lhqTreeView && (viewItem == languages) && lhqTreeHasLanguagesVisible"
        },
        {
          "command": "lhqTreeView.addCategory",
          "when": "view == lhqTreeView && (viewItem == category || viewItem == model) && !lhqTreeHasMultiSelection && !lhqTreeHasLanguageSelection"
        },
        {
          "command": "lhqTreeView.addResource",
          "when": "view == lhqTreeView && (viewItem == category || viewItem == model) && !lhqTreeHasMultiSelection && !lhqTreeHasLanguageSelection"
        },
        {
          "command": "lhqTreeView.addLanguage",
          "when": "view == lhqTreeView && (viewItem == languages || viewItem == language) && !lhqTreeHasMultiSelection"
        },
        {
          "command": "lhqTreeView.renameElement",
          "when": "view == lhqTreeView && lhqTreeHasSelectedItem && !lhqTreeHasLanguageSelection"
        },
        {
          "command": "lhqTreeView.deleteElement",
          "when": "view == lhqTreeView && (viewItem == category || viewItem == resource) && !lhqTreeHasSelectedDiffParents && !lhqTreeHasLanguageSelection"
        },
        {
          "command": "lhqTreeView.deleteLanguage",
          "when": "view == lhqTreeView && viewItem == language"
        },
        {
          "command": "lhqTreeView.markLanguageAsPrimary",
          "when": "view == lhqTreeView && viewItem == language && !lhqTreeHasPrimaryLanguageSelected && !lhqTreeHasMultiSelection"
        }
      ]
    },
    "keybindings": [
      {
        "command": "lhqTreeView.advancedFind",
        "key": "ctrl+alt+f",
        "when": "lhqEditorIsActive"
      },
      {
        "command": "lhqTreeView.addCategory",
        "key": "ctrl+insert",
        "when": "lhqEditorIsActive && !lhqTreeHasMultiSelection && !lhqTreeHasLanguageSelection"
      },
      {
        "command": "lhqTreeView.addResource",
        "key": "insert",
        "when": "lhqEditorIsActive && !lhqTreeHasMultiSelection && !lhqTreeHasLanguageSelection"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/lodash.debounce": "^4.0.9",
    "@types/lodash.throttle": "^4.1.9",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.100.0",
    "@types/vscode-webview": "^1.57.5",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.5",
    "esbuild-plugin-copy": "^2.1.1",
    "eslint": "^9.28.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@lhq/lhq-generators": "1.0.0-rc.76",
    "class-transformer": "^0.5.1",
    "fs-extra": "11.3.0",
    "lodash.debounce": "4.0.8",
    "lodash.throttle": "4.1.1",
    "reflect-metadata": "^0.2.2",
    "glob": "^11.0.1"
  }
}
